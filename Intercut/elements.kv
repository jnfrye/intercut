

<Element>:
    background_color: [1, 1, 1, 0]
    font_name: r'courier.ttf'
    font_size: 24
    cursor_color: [0, 0, 0, 1]
    multiline: False

<Action>:
    hint_text: '[Action]'
    on_text_validate: self.parent.add_action(self.element_index)

<Scene>:
    hint_text: '[SCENE]'
    on_text_validate: self.parent.add_action(self.element_index)

<Character>:
    hint_text: '[Character]'
    on_text_validate: self.parent.add_dialogue(self.element_index)

<Dialogue>:
    hint_text: '[Dialogue]'
    on_text_validate: self.parent.add_character(self.element_index)
